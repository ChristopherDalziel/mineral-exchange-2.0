<div class="container">
  <%= render '/pages/nav' %>
  <table>
    <thead>
      <tr>
        <th>Id:</th>
        <th>User Id:</th>
        <th>Type:</th>
        <th>Mineral:</th>
        <th>Description:</th>
        <th>Location:</th>
        <th>Price:</th>
        <th>Sold:</th>
        
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @listings.each do |listing| %>
        <tr>
          <td><%= listing.id %></td>
          <td><%= listing.user.email%>
          <td><%= listing.type.name %></td>
          <td><%= listing.mineral_name %></td>
          <td><%= listing.description %></td>
          <td><%= listing.location %></td>
          <td><%= listing.price %></td>

          <% if listing.sold == 'yes' %>
            <td><%= 'Sold' %></td>
            <% elsif listing.sold == 'no' %>
            <td><%= 'Not Sold' %></td>
          <% end %>
          
          <% if current_user == listing.user %>
            <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
            <td><%= link_to 'Show', listing_path(listing) %></td>
            <td><%= link_to 'Destroy', listing_path(listing), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
            
        </tr
      <% end %>
    </tbody>
  </table>
  <%= render '/pages/footer' %>
</div>